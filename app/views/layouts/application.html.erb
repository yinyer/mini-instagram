<!DOCTYPE html>
<html>
<head>
  <title>MiniInstagram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag "take-picture.png" %>
      <% end %>
    </div>
    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Home" , root_path %></li>
      <li><%= link_to "About" , about_path %></li>
    </ul>

    <ul>
      <li class="category">Social</li>
      <li><a href="#">Twitter</a></li>
      <li><a href="#">Google +</a></li>
      <li><a href="#">Facebook</a></li>
      <li><a href="mailto:gilda@insignia4u.com">Email</a></li>
    </ul>
    <% if !user_signed_in? %>
      <p class="sign_in">Admin Login</p>
    <% end %>
  </div>

   <div id="main_content">

    <div id="header">

      <% if current_user %>
        <div class="buttons">
          <button class="button"><%= link_to "Salir", destroy_user_session_path, method: :delete %></button>
        </div>
      <% else %>
        <div class="buttons">
          <button class="button"><%= link_to "Iniciar SesiÃ³n", new_user_session_path %></button>
          <button class="button"><%= link_to "Registrarse", new_user_registration_path %></button>
        </div>
      <% end %>

     <!--  <%= link_to 'Home', root_path %>
      <%= link_to 'About', page_path('about') %>
      <%= link_to 'FAQ', page_path('faq') %>
      <%= link_to 'Help', page_path('help') %>
      <%= link_to 'Contact', page_path('contact') %> -->
    </div>

    <div id="page_wrapper">

  <% if notice || alert %>
    <div class="notice">
      <%= render 'layouts/alerts' %>
    </div>
  <% end %>
  <%= yield %>

  </div>

</body>
</html>
